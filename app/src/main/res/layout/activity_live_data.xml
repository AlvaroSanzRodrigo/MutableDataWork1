<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LiveData"
        android:orientation="vertical">

    <TextView
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trabajo en casa"/>
    <ToggleButton
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton"
            android:textOff="No"
            android:textOn="Si"/>
    <TextView
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTrabajo"/>
    <TextView
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voy a aprobar"/>
    <ToggleButton
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Si"
            android:textOff="No" android:id="@+id/toggleButton2"/>
    <TextView
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewAprobar"/>
    <TextView
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tengo: "/>
    <LinearLayout
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
                android:padding="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="years" android:id="@+id/editText"/>
        <TextView
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textViewEdad"/>

    </LinearLayout>

</LinearLayout>